          <h3>Date</h3>
          <h3>Present()%</h3>
        </div>
        <br />

        <div class="attendets">
          <h3 id="currentDate"></h3>
          <a href="/time_tracking"><button class="present">Present</button></a>
        </div>
      </div>
      <br />

      <div class="rsec">
        <div id="chartdiv"></div>
      </div>
    </div>
  </div>
</body>
<script src="javascripts/index.js"></script>

