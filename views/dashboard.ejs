<body>
  <div id="mobile">
    <p id="message">Please use this on a desktop.</p>
  </div>
  <div id="main">
    <div class="headimg">
      <img src="images/a.png" alt="" />
    </div>
    <div class="nav">
      <div class="leftnav">
        <div class="iam">Welcome to Web . We</div>
        <div class="text"></div>
      </div>
      <div class="rightnav">
        <a href="/todays_task">
          <div id="tasks">
